<script>
  // year
  document.getElementById('y').textContent = new Date().getFullYear();

  // sidenav active state on scroll
  const links = document.querySelectorAll('.sidenav nav a');
  const secs = [...links].map(a => document.querySelector(a.getAttribute('href')));
  const onScroll = () => {
    const fromTop = window.scrollY + 120;
    let active = links[0];
    secs.forEach((sec, i) => {
      if (sec.offsetTop <= fromTop) active = links[i];
    });
    links.forEach(l => l.classList.remove('active'));
    active.classList.add('active');
  };
  document.addEventListener('scroll', onScroll, {passive:true});
</script>
// Back to top
const btn = document.getElementById('backToTop');
const toggleTop = () => btn.style.opacity = window.scrollY > 900 ? 1 : 0;
btn.addEventListener('click', () => window.scrollTo({top:0, behavior:'smooth'}));
document.addEventListener('scroll', toggleTop, {passive:true});

// Quick filter (search topics by text)
const searchBox = document.createElement('input');
searchBox.className = 'quicksearch';
searchBox.placeholder = 'Search topics‚Ä¶';
document.querySelector('#overview .pillrow').after(searchBox);
const topics = Array.from(document.querySelectorAll('.topic'));
searchBox.addEventListener('input', e=>{
  const q = e.target.value.toLowerCase();
  topics.forEach(t => t.style.display = t.innerText.toLowerCase().includes(q) ? '' : 'none');
});
